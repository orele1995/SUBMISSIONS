<Application x:Class="WpfApplication3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApplication3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="itemsTem">
            <Border Background="Azure" BorderThickness="2" CornerRadius="5" BorderBrush="BlueViolet">
                <StackPanel Margin="5" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding ProcessName}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding StartTime}" FontSize ="15" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding Id}" FontSize ="15" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>
